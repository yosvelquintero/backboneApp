<div class="jumbotron">
    <h1>Quote create</h1>
</div>
<div class="row">
    <div class="col-sm-12">
        <h2 class="heading">Request a quote</h2>
        <form class="form-horizontal create-quote">
            <fieldset>
                <legend>Form:</legend>
                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="value_date">Date:</label>
                    <div class="col-md-4">
                        <input id="value_date" name="value_date" class="form-control input-md" type="text" required="" pattern="(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}" placeholder="Date">
                        <span class="help-block">Format: "30/11/2015"</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="market_direction">Market direction:</label>
                    <div class="col-md-4">
                        <select id="market_direction" name="market_direction" class="form-control" required>
                            <option value="">Select</option>
                            <option value="buy">Buy</option>
                            <option value="sell">Sell</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="amount">Amount:</label>
                    <div class="col-md-4">
                        <input id="amount" name="amount" type="text" placeholder="Amount" class="form-control input-md" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="currency">Currency:</label>
                    <div class="col-md-4">
                        <select id="currency" name="currency" class="form-control" required>
                            <option value="">Select</option>
                            <option value="EUR">EUR</option>
                            <option value="USD">USD</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="counter_currency">Counter currency:</label>
                    <div class="col-md-4">
                        <select id="counter_currency" name="counter_currency" class="form-control" required>
                            <option value="">Select</option>
                            <option value="EUR">EUR</option>
                            <option value="USD">USD</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">&nbsp;</div>
                    <div class="col-md-8">
                        <button class="btn btn-success create">Quote</button>
                        <button class="btn btn-sencondary cancel">Cancel</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
